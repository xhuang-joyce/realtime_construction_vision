# OpenAI API Key for Real-time API
OPENAI_API_KEY=your_openai_api_key_here

# Camera settings
CAMERA_INDEX=0
FRAME_WIDTH=640
FRAME_HEIGHT=480
FPS=30

# Processing settings
FRAME_INTERVAL=3  # Send camera image every N seconds in multimodal mode
MAX_RETRIES=3
USE_REALTIME_API=true  # Set to true to enable voice interaction

# Microphone settings (leave MICROPHONE_INDEX empty for default)
MICROPHONE_INDEX=
VAD_THRESHOLD=500
SILENCE_DURATION=2.0

# Audio output settings
AUDIO_SAMPLE_RATE=24000
AUDIO_CHANNELS=1
TTS_VOICE=alloy
USE_TTS_FALLBACK=true

# Realtime Conversation Agent settings
VISUAL_CONTEXT_INTERVAL=3  # Update visual context every N seconds
ENABLE_INTERRUPTION=true    # Allow user to interrupt AI responses
AUTO_START_CONVERSATION=true  # Automatically start conversation on startup